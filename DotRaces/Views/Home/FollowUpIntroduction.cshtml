@model DotRaces.Models.OSUSurvey
@{
    ViewBag.Title = "Follow Up Introduction";
}

@using (Html.BeginForm("FollowUpIntroduction", "Home"))
{
    @Html.HiddenFor(x => x.SurveyID)
    @Html.HiddenFor(x => x.CreatedDate)
    @Html.HiddenFor(x => x.IdentityCode)
    @Html.HiddenFor(x => x.PointTotal)
    @Html.HiddenFor(x => x.SettingsID)

<table style="margin: 0 auto;">
    <tr>
        <td>
            <p class="lead">
                You will now be shown the same series of questions you saw earlier, again presented one at a time.
            </p>
        </td>
    </tr>
    <tr>
        <td>
            <p class="text-center">
                <button type="submit" class="btn btn-default btn-success"><span class="glyphicon glyphicon-share-alt"></span>&nbsp;&nbsp;Next</button>
            </p>
        </td>
    </tr>
</table>
}