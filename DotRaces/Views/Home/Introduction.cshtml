@model DotRaces.Models.OSUSurvey
@{
    ViewBag.Title = "Introduction";
}

@using (Html.BeginForm("Introduction", "Home"))
{
    @Html.HiddenFor(x => x.SurveyID)
    @Html.HiddenFor(x => x.CreatedDate)
    @Html.HiddenFor(x => x.SettingsID)
    <table>
        <tr>
            <th>
                <h2>Introduction</h2>
            </th>
        </tr>
        <tr>
            <td>
                <br />
                <p class="lead">
                    During this segment you will be watching seven races in which you may or may not receive points based on the outcome of each race.
                </p>
                <p class="lead">
                    The total time commitment of this portion will be approximately 10 minutes.
                </p>
                <p class="lead">
                    The next page presents instructions for this portion of the study. This page will be held for one minute to make sure you have time to read it.
                </p>
            </td>
        </tr>
        <tr>
            <td>
                <br />
                <p class="text-center">
                    <button type="submit" class="btn btn-default btn-success"><span class="glyphicon glyphicon-share-alt"></span>&nbsp;&nbsp;Next</button>
                </p>
            </td>
        </tr>
    </table>
}

