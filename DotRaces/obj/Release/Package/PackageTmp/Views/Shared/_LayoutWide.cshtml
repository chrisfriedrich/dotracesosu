<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Dot Races</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,600italic,400italic' rel='stylesheet' type='text/css'>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script type="text/javascript">
      $( function() {
          $( "#slider" ).slider({
              value: 4,
              min: 1,
              max: 7,
              step: 1,
              slide: function (event, ui) {
                  $("#Answer_AnswerValue").val(ui.value);
              }
          });
          $("#Answer_AnswerValue").val($("#slider").slider("value"));
      });

    </script>
    <script type="text/javascript">

        $(document).ready(function () {

            $("input[name$='Answer.AnswerValue']").on('click', function () {
                $(":submit").removeAttr("disabled");
                $(":submit").addClass("btn-success");
            });

            $("input[name$='Answer.AnswerFlag']").on('click', function () {
                var test = $(this).val();
                if (test == "false") {
                    $("#AnswerFlagTrue").hide(300);
                    $(":submit").addClass("btn-success");
                    $(":submit").removeAttr("disabled");
                }
                else {
                    $("#AnswerFlagTrue").show(300);
                    if (!$("input[name$='Answer.AnswerValue']:checked").val()) {
                        $(":submit").prop("disabled", true);
                        $(":submit").removeClass("btn-success");
                    }
                }


            });
        });

    </script>

</head>
<body>
    <div class="container body-content widebody">
        @RenderBody()
        @*<hr />
        <footer>
            <p class="text-center">&copy; @DateTime.Now.Year - Chris Friedrich</p>
        </footer>*@
    </div>
</body>
</html>
